{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "description": "Default build",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/lib",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "release",
      "description": "Release build",
      "binaryDir": "${sourceDir}/build/release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "web",
      "description": "Web build",
      "binaryDir": "${sourceDir}/build/web",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TTAC_EXAMPLE": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/web",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/web/lib"
      }
    },
    {
      "name": "debug",
      "description": "Debug build",
      "binaryDir": "${sourceDir}/build/debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "TTAC_TESTS": "ON",
        "TTAC_EXAMPLE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "hidden": false,
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "hidden": false,
      "configurePreset": "debug"
    },
    {
      "name": "web",
      "hidden": false,
      "configurePreset": "web"
    }
  ]
}
